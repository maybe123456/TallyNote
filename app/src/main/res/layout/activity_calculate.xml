<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资金额(元)"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入投资金额"
            android:padding="10dp"
            android:lines="1"
            android:inputType="numberDecimal"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预期年化(%)"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入预期年化"
            android:padding="10dp"
            android:lines="1"
            android:inputType="numberDecimal"
            android:background="@null"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资期限(天)"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入投资期限"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:lines="1"
            android:background="@null"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最终收益(元)"
            android:onClick="onClick"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_finalIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:hint="请输入最终收益"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:lines="1"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算结果(日/万/元)："
            android:onClick="onClick"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:textSize="@dimen/bigtextSize"/>

        <TextView
            android:id="@+id/cal_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:lines="1"
            android:background="@null"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>


</LinearLayout>
