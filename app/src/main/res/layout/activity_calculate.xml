<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资金额(元)"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入投资金额"
            android:padding="10dp"
            android:lines="1"
            android:inputType="numberDecimal"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_input_bkg"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预期年化(%)"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入预期年化"
            android:padding="10dp"
            android:lines="1"
            android:inputType="numberDecimal"
            android:background="@null"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资期限(天)"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入投资期限"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:lines="1"
            android:background="@null"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最终收益(元)"
            android:onClick="onClick"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigtextSize"/>

        <EditText
            android:id="@+id/cal_finalIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:hint="请输入最终收益"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:lines="1"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算结果(日/万/元)："
            android:onClick="onClick"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:textSize="@dimen/bigtextSize"/>

        <TextView
            android:id="@+id/cal_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:lines="1"
            android:background="@null"
            android:textSize="@dimen/bigtextSize"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:id="@+id/nunkeyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/hide_nunkeyboard"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:src="@drawable/hide_nunkeyboard"/>
            <GridView
                android:id="@+id/numGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:numColumns="4"
                android:scrollbars="none"
                android:horizontalSpacing="0.5dp"
                android:verticalSpacing="0.5dp"
                android:padding="0.5dp"
                android:gravity="center_horizontal|center"/>

            <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_alignParentBottom="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#999999"
                android:keyBackground="@drawable/btn_keyboard_key"
                android:keyTextSize="16sp"
                android:keyTextColor="#000"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
